{
  "name": "refinery-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end regression testing suite for Refinery platform",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test --project=api-tests",
    "test:gateway": "playwright test --project=gateway-tests",
    "test:formready": "playwright test --project=formready-ui",
    "test:workflows": "playwright test --project=workflows",
    "test:smoke": "playwright test --grep @smoke",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "install:browsers": "playwright install --with-deps"
  },
  "keywords": [
    "e2e",
    "playwright",
    "testing",
    "refinery"
  ],
  "author": "Refinery Team",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3"
  }
}
