    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.2",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "typescript": "^5.6.3"
  }
}
