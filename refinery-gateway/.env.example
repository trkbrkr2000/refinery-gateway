# Server Configuration
PORT=8080
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/refinery-gateway

# Redis Configuration (optional - falls back to in-memory if not set)
# REDIS_URL=redis://localhost:6379
# For Railway, this is auto-injected when you add Redis plugin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Service Endpoints (internal)
VA_KNOWLEDGE_SERVICE_URL=http://localhost:3001
FORMS_SERVICE_URL=http://localhost:3002
PROCESSOR_SERVICE_URL=http://localhost:3003

# CORS
CORS_ORIGINS=http://localhost:3000,https://your-frontend.railway.app

# Logging
LOG_LEVEL=debug
